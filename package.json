{
	"name": "igma-project",
	"version": "1.0.0",
	"main": "server.js",
	"author": "Lucas Alves <contato.lucasalv@gmail.com>",
	"license": "MIT",
	"type": "module",
	"scripts": {
		"dev": "tsx watch src/server.ts",
		"prisma:deploy": "prisma migrate deploy",
		"build": "tsup src --outDir build --format esm",
		"prestart": "npm run prisma:deploy && npm run build",
		"start": "node build/server.js",
		"test": "npm run prisma:deploy && jest --passWithNoTests",
		"test:local": "jest --passWithNoTests --watch",
		"test:staged": "npm run test:local --findRelatedTests"

	},
	"dependencies": {
		"@joi/date": "^2.1.0",
		"@prisma/client": "^4.3.1",
		"cors": "^2.8.5",
		"dotenv": "^16.0.3",
		"express": "^4.18.2",
		"express-async-errors": "^3.1.1",
		"joi": "^17.7.0"
	},
	"devDependencies": {
		"@faker-js/faker": "^7.6.0",
		"@types/cors": "^2.8.12",
		"@types/express": "^4.17.13",
		"@types/jest": "^29.4.0",
		"@typescript-eslint/eslint-plugin": "^5.51.0",
		"@typescript-eslint/parser": "^5.51.0",
		"eslint": "^8.33.0",
		"eslint-config-prettier": "^8.6.0",
		"git-commit-msg-linter": "^4.5.1",
		"husky": "^8.0.3",
		"jest": "^29.4.2",
		"lint-staged": "^13.1.1",
		"prettier": "^2.8.4",
		"prisma": "^4.3.1",
		"supertest": "^6.3.3",
		"ts-jest": "^29.0.5",
		"tsup": "^6.5.0",
		"tsx": "^3.12.2",
		"typescript": "^4.7.4"
	}
}
